{{#>layout}}
  {{#*inline "title"}}{{ name }} - Avatar List{{/inline}}
  {{#*inline "navRight" }} <span class="mr-auto"></span>
  <form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" type="text" placeholder="Set Avatar Size" aria-label="Set Avatar Size" name="size" value="{{size}}px" />
    <button class="btn btn-outline-default my-2 my-sm-0 btn-update-sizes">Update Sizes</button>
  </form>
  {{/inline}}
  {{#*inline "body"}}
    <div>
      <h1>{{ name }} - Avatar List</h1>
    </div>
    <div>
      <h2>Dynamic Avatars</h2>
      {{>avatarList dynamic}}
    </div>
    {{>pagination pagination}}
    <div>
      <h2>Static Avatars</h2>
      {{>avatarList images}}
    </div>
    {{>pagination pagination}}
    <div class="modal jump-to-page" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <form>
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Jump to Page</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="page-jumper" class="col-form-label">Jump to Page:</label>
                <input type="number" class="form-control" name="page">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <input type="submit" class="btn btn-primary" value="Navigate">
            </div>
          </form>
        </div>
      </div>
    </div>
  {{/inline}}
  {{#*inline "header"}}
    <script type="text/javascript" src="/javascript/listing.js"></script>
    <style type="text/css">
      .preview-image {
        width: {{size}}px;
        height: {{size}}px;
      }
      .invalid {
        background: #FFCCCC;
        border-color: #FF0000;
      }
    </style>
  {{/inline}}
{{/layout}}
